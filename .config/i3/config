bindsym XF86AudioRaiseVolume exec --no-startup-id ponymix increase 5; exec --no-startup-id pkill -SIGRTMIN+11 i3blocks # increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id ponymix decrease 5; exec --no-startup-id pkill -SIGRTMIN+11 i3blocks # decrease sound volume
bindsym XF86AudioMute exec --no-startup-id ponymix toggle; exec --no-startup-id pkill -SIGRTMIN+11 i3blocks # mute sound
